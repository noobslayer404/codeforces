#include <stdio.h>

int main(){
    int n;
    char c = ' ';
    scanf("%d",&n);
    for ( int  i = 0 ; i <= n ; i++){
        for( int j = 0 ; j < n-i ; ++j){
            printf("%c%c",c,c);
        }
        int k = 0;
        for( int j = n-i ; j < n ; j++){
            printf("%d",k);
            if( k == 0 && i == 0 ){
                continue;
            }
            else{
                printf("%c",c);}
            k++;
        }
        printf("%d",i);
        printf("%c",c);
        k--;
        for( int j = n+1 ; j <= n+i ; j++){
            printf("%d",k);
            printf("%c",c);
            k--;
        }
        for ( int j = n+i+1 ; j < 2*n+1 ; j++){
            printf("%c%c",c,c);
        }
        printf("\n");
    }
    for ( int  i = n-1 ; i >=0 ; i--){
        for( int j = 0 ; j < n-i ; ++j){
            printf("%c%c",c,c);
        }
        int k = 0;
        for( int j = n-i ; j < n ; j++){
            printf("%d",k);
            if( k == 0 && i == 0 ){
                continue;
            }
            else{
                printf("%c",c);}
            k++;
        }
        printf("%d",i);
        printf("%c",c);
        k--;
        for( int j = n+1 ; j <= n+i ; j++){
            printf("%d",k);
            printf("%c",c);
            k--;
        }

        for ( int j = n+i+1 ; j < 2*n+1 ; j++){
            printf("%c%c",c,c);
        }
        if( i != 0){
            printf("\n");
        }

    }

    return 0;
}
