#include <iostream>
using namespace std;
int main()
{
    int m[5][5],x,y,n=0;
    for(int i=0;i<5;i++)
    {
        for(int j=0;j<5;j++)
        {
        cin>>m[i][j];
        if(m[i][j]==1)
        {
            x=i;
            y=j;
        }
        }
    }
    if ( x==2 & y==2)
    {
        cout<<n;
        return 0;
    }
        
        if(x>2)
        {
            n+=x-2;
        }
        else if(x<2)
        {
            n+=2-x;
        }
        if(y>2)
        {
            n+=y-2;
        }
        if(y<2)
        {
            n+=2-y;
        }
        
    
    cout<<n;
    return 0;
}
