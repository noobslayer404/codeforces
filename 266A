#include <iostream>
using namespace std;
int main()
{
    int n;
	cin>>n;
	char *str=new char[n];
    for(int i=0;i<n;i++)
		cin>>str[i];

    int i=0,c=0;
    while(i<n-1)
    {
        if(str[i] == str[i+1] )
            {
                c++;
                
            }
        i++;
    }
	cout<<c;
    return 0;
}
