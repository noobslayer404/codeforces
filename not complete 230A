#include <stdio.h>

void insertion(int *x, int *y,int &n){
    for(int j = 1 ; j < n ; ++j  ){
        int key1 = x[j], key2 = y[j];
        int i = j-1;
        while (i > 0 && x[i] > key1){
            x[i+1]=x[i];
            y[i+1]=y[i];
            i--;
        }
        x[j+1]= key1;
        y[j+1]= key2;
    }
}

int main(){
    
    int s , n ,*x,*y;
    scanf("%d",&s);
    scanf("%d",&n);
    x = new int[n];
    y = new int[n];
    int r = 0;
    for ( int i = 0 ; i < n ; i++){
        scanf("%d",&x[i]);
        scanf("%d",&y[i]);
    }
    insertion(x,y,n);
    
    for ( int i = 0 ; i < n ; i++){
        if(s > x[i]){
            s += y[i];
        }
        else{
            printf("NO");
            return 0;       
        }
    }

    printf("YES");
    return 0;
}
