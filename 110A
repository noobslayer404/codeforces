#include  <iostream>
#include <string>
using namespace std;
 int main()
 {
     string c;
     int four=0,seven=0;
     cin>>c;
     for(int i=0;c[i]!='\0';i++)
     {
         
        if(c[i]=='4')
        four++;
        else if(c[i]=='7')
            seven++;
     }
     if( (seven+four)==4 || (seven+four)==7 )
         cout<<"YES";
     else
        cout<<"NO";
     
 return 0;
 
 }
